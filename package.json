  "devDependencies": {
    "@theia/cli": "1.21.0",
    "@typescript-eslint/eslint-plugin": "~4.33.0",
    "@typescript-eslint/parser": "~4.33.0",
    "eslint": "~7.32.0",
    "eslint-config-airbnb": "~18.2.1",
    "eslint-plugin-deprecation": "~1.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-no-unsanitized": "^3.1.5",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "lerna": "^4.0.0",
    "rimraf": "^2.7.1",
    "ts-node": "^10.0.0",
    "type-fest": "^0.20.2",
    "yargs": "^17.0.2"
  },
  "scripts": {
    "lint": "npx lerna run lint",
    "lint:fix": "npx lerna run lint:fix",
    "clean": "npx lerna run clean && rimraf node_modules",
    "build": "npx lerna run build",
    "bundle": "npx lerna run bundle",
    "watch": "npx lerna run --parallel watch",
    "test": "npx lerna run test",
    "ide": "yarn --cwd bin/ide",
    "ui:build": "npx lerna run build --scope \"@pep10/ui-*\"",
    "ui:test": "npx lerna run test:ci --scope \"@pep10/ui-*\"",
    "storybook:serve": "yarn --cwd packages/ui start-storybook -p 6006",
    "storybook:build": "yarn --cwd packages/ui build-storybook",
    "wasm": "yarn --cwd packages/native/core"
  },
  "workspaces": [
    "bin/*",
    "packages/**/*"
  ]
}
